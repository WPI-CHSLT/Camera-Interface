<Window x:Class="Camera_Application.Windows.CameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Camera_Application.Windows"
        mc:Ignorable="d"
        Title="CameraWindow" Height="500" Width="500">
    <Grid>
        <Button x:Name="startCapture_btn" Content="Start Capture" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="90" Click="startCaptureBtn_Click"/>
        <Button x:Name="stopCapture_btn" Content="Stop Capture" HorizontalAlignment="Left" Margin="105,10,0,0" VerticalAlignment="Top" Width="90" Click="stopCaptureBtn_Click"/>
    </Grid>
</Window>
